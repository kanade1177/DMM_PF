<h2>検索結果</h2>
<% if @range == "User" %>
  <div class="container">
   <div class="row">
    <div class="col-md-8 offset-md-1">
     <h2>Users</h2>
      <table class="table table-hover table-invers">
       <thead>
        <tr>
         <th></th>
         <th>Name</th>

         <th colspan="3"></th>
        </tr>
       </thead>
       <% @users.each do |user| %>
       <tbody>
        <tr>
         <td>
          <%= attachment_image_tag user, :profile_image, format: "jpeg", size: "40x40",class: "img-fluid rounded-circle" %>
         </td>
         <td>
          <%= user.name %>
         </td>
        </tr>
       </tbody>
       <% end %>
      </table>
     </div>
    </div>
  </div>


<% else %>

<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <h2>Tweets</h2>
    <table class="table table-hover table-invers table-borderless">
     <thead>
      <tr>
       <th></th>
       <th>Name</th>
       <th>Title</th>
       <th>Erea</th>
       <th>Category</th>
       <th colspan="3"></th>
      </tr>
     </thead>
     <% @tweets.each do | tweet | %>
     <tbody>
      <tr>
       <td class>
        <%= attachment_image_tag tweet.user, :profile_image, format: "jpeg", size: "45x45",class: "img-fluid rounded-circle" %>
       </td>
       <td>
        <%= tweet.user.name %>
       </td>
       <td>
        <%= link_to tweet_path(tweet.id) do %>
         <%= tweet.title %>
        <% end %>
       </td>
       <td>
        <%= tweet.erea.name %>
       </td>
       <td>
        <%= tweet.category.name %>
       </td>
       <td id="favorite_buttons_<%= tweet.id %>">
        <%= render "favorites/favorite", tweet: tweet %>
       </td>
       <td>
        <i class="far fa-clock clock-icon"></i><%= time_ago_in_words(tweet.created_at) %>前
       </td>
      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
  </div>
</div>
<% end %>