<h1>新規投稿</h1>
<%= form_with model: @tweet, local: true do |f| %>
  
  <div>
    <label>Foto</label>
    <%= f.attachment_field :post_image %>
  </div>
  
  <div>
    <label>Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div>
    <label>Opinion</label>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "投稿", class: "btn btn-success" %>
  </div>

<% end %>