<div class="container">
 <div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8 mt-4">
   <% @tweets.each do | tweet | %>
    <div class="card mb-3">
     <%= link_to tweet_path(tweet.id) do %>
      <%= attachment_image_tag tweet, :post_image, :fill, 150, 100, format: 'jpeg', class: "card-img-top" %>
     <% end %>
      <div class="card-body">
       <h5 class="card-title">
        <%= link_to tweet_path(tweet.id), class: "text-dark" do %>
         <%= tweet.title %>
        <% end %>
       </h5>
       <p class="card-text">
        <%= link_to user_path(tweet.user.id) do %>
         <%= attachment_image_tag tweet.user, :profile_image, format: "jpeg", size: "50x50",class: "img-fluid rounded-circle" %>
        <% end %>
        <span>
         <%= link_to user_path(tweet.user.id), class: "text-dark" do %>
          <%= tweet.user.name %>
         <% end %>
        </span>
       </p>
       <p class="card-text">
        <small>
         <%= tweet.erea.name %>
        </small>
        <small>
         <%= tweet.category.name %>
        </small>
        <small id="favorite_buttons_<%= tweet.id %>">
         <%= render "favorites/favorite", tweet: tweet %>
        </small>
        <small class="far fa-clock clock-icon text-muted">
         <%= time_ago_in_words(tweet.created_at) %>前
        </small>
        </p>
      </div>
    </div>
   <% end %>
  </div>

 </div>
</div>