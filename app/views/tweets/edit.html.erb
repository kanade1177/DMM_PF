<h1>Tweets#edit</h1>

<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-xm-0 max-auto ">

     <%= form_with model: @tweet, local:true do |f| %>
      <div class="form-group">
       <label>Foto</label>
       <%= f.attachment_field :post_image %>
      </div>

      <div class="form-group">
        <label>Category</label>
        <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "-- 選択してください--" %>
      </div>

      <div class="form-group">
       <label>Erea</label>
       <%= f.collection_select :erea_id, Erea.all, :id, :name, prompt: "-- 選択してください--" %>
      </div>

      <div class="form-group">
       <label>Title</label>
       <%= f.text_field :title, class: "form-control" %>
      </div>
      
      <div class="form-group">
       <label>Opinion</label>
       <%= f.text_area :body, class: "form-control" %>
      </div>
      
      <div class="form-group">
       <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>

     <% end %>
    </div>
   </div>
  </div>
 </main>
</body>

