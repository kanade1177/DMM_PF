<h1>新規投稿</h1>
<%= form_with model: @post, local: true do |f| %>

  <div>
    <label>Title</label>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div>
    <label>Opinion</label>
    <%= f.text_area :body, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "投稿", class: "btn btn-success" %>
  </div>

<% end %>