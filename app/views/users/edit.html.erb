<h1>Users#edit</h1>

<body>
 <main>
  <div class="container">
   <div class="row">
    <div class="col-sm12 col-md-8 col-lg-5 px-5 px-xm-0 max-auto ">

     <%= form_with model: @user, local:true do |f| %>
      <div class="form-group">
       <label>Name</label>
       <%= f.text_field :name %>
      </div>

      <div class="form-group">
        <label>Image</label>
        <%= f.attachment_field :profile_image %>
      </div>

      <div class="form-group">
       <label>Introduction</label>
       <%= f.text_field :introduction, class: "form-control" %>
      </div>

      <div class="form-group">
       <%= f.submit "Update User", class: "btn btn-secondary" %>
      </div>

     <% end %>
    </div>
   </div>
  </div>
 </main>
</body>
