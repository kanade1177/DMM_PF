<h1>Users#index</h1>

<div class="container">
 <div class="row">
  <div class="col-md-8 offset-md-1">
   <h2>Users</h2>
    <table class="table table-hover table-invers">
     <thead>
      <tr>
       <th></th>
       <th>Name</th>

       <th colspan="3"></th>
      </tr>
     </thead>
     <% @users.each do |user| %>
     <tbody>
      <tr>
       <td>
        <%= attachment_image_tag user, :profile_image, format: "jpeg", size: "40x40",class: "img-fluid rounded-circle" %>
       </td>
       <td>
        <%= user.name %>
       </td>


      </tr>
     </tbody>
     <% end %>
    </table>
   </div>
  </div>
</div>




