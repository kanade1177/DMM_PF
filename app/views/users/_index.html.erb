<div class="container">
 <div class="row">
  <div class="col-md-11 offset-md-1 mt-4">
   <h2>Users</h2>
    <table class="table table-hover table-invers table-borderless">
     <thead>
      <tr>
       <th></th>
       <th>Name</th>
       <th>Introductin</th>
       <th>Follow</th>
       <th>Follower</th>
       <th>Tweets</th>

       <th colspan="3"></th>
      </tr>
     </thead>
     <% users.each do |user| %>
     <tbody>
      <tr>
       <td>
        <%= link_to user_path(user.id) do %>
         <%= attachment_image_tag user, :profile_image, format: "jpeg", size: "40x40",class: "img-fluid rounded-circle" %>
        <% end %>
       </td>
       <td>
        <%= link_to user_path(user.id), class: "text-dark" do %>
         <strong><%= user.name %></strong>
        <% end %>
       </td>
       <td>
        <%= user.introduction.truncate(20) %>
       </td>
       <td>
         <strong><%= link_to "#{user.followings.count}", user_followings_path(user), class: "text-dark" %></strong>

       <td>
        <strong><%= link_to "#{user.followers.count}", user_followers_path(user), class: "text-dark" %></strong>
       </td>
       <td>
        <strong><%= link_to "#{user.tweets.count}", user_path(user.id), class: "text-dark"  %></strong>
       </td>

      </tr>
     </tbody>
     <% end %>
     <%= paginate users %>
    </table>
   </div>
  </div>
</div>
