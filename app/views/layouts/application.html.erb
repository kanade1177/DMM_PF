<!DOCTYPE html>
<html>
  <head>
    <title>Place</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><%#= image_tag('logo.png') %></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li><%= render "searches/search", class: "ml-10" %></li>
            <% if user_signed_in? %>
            <!--追加-->
            <li class="nav-item">
               <% if unchecked_notifications.any? %>
                 <li><%= link_to "通知",notifications_path, class: " fas fa-bell nav-link text-dark",style: "color:tomato;"%>
              <% else %>
                 <li><%= link_to "通知",notifications_path, class: " fas fa-check nav-link text-dark"%>
              <% end %>
            </li>
            <!--ここまで-->
            <li class="nav-item">
              <%= link_to user_path(current_user.id), class: 'btn  btn-outline-dark ml-3', method: :get do %>
               <i class="fas fa-home"></i>
              <% end  %>
            </li>
            <li class="nav-item">
              <%= link_to new_tweet_path, class: 'btn  btn-outline-dark ml-3', method: :get do %>
               <i class="fas fa-edit"></i>
              <% end %>
            </li>

            <li class="nav-item">
              <%= link_to tweets_path, class: "btn  btn-outline-dark ml-3", method: :get do %>
                <i class="far fa-list-alt"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: "btn  btn-outline-dark ml-3", method: :get do %>
                <i class="fas fa-users"></i>
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to destroy_user_session_path, class: "btn  btn-outline-dark ml-3" , method: :delete do %>
                <i class="fas fa-sign-out-alt"></i>
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: 'nav-link text-dark' %>
            </li>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: 'nav-link text-dark' %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>

    <%= javascript_include_tag "application" %>
    </main>
</html>
